{
	"$schema": "http://json-schema.org/draft-07/schema#",
	"$id": "https://schemas.pay-cex.io/gateway/v2/order-currency.json",
	"title": "Represents a request body model that creates a new order.",
	"type": "object",
	"properties": {
		"id": {
			"$ref": "https://schemas.pay-cex.io/gateway/v2/identifier-order.json",
			"title": "Order unique identifier."
		},
		"instrument": {
			"type": "string",
			"title": "Order instrument",
			"const": "CRYPTO_SELL",
			"enum": [
				"CRYPTO_PAY",
				"CRYPTO_SELL"
			]
		},
		"model": {
			"type": "string",
			"title": "Order model",
			"const": "DEFAULT",
			"maxLength": 64
		},
		"email": {
			"type": "string",
			"title": "User email for getting the order updates",
			"maxLength": 64
		},
		"tag": {
			"type": "string",
			"title": "Order tag",
			"maxLength": 4096,
			"description": "Defines a tag that was passed on order creation, it can be accessed later"
		},
		"description": {
			"type": "string",
			"title": "Order description",
			"maxLength": 4096
		},
		"okRedirect": {
			"$ref": "https://schemas.pay-cex.io/api/v3/primitives.json#definitions/uri",
			"title": "Payment success redirection URI",
			"maxLength": 512
		},
		"failRedirect": {
			"$ref": "https://schemas.pay-cex.io/api/v3/primitives.json#definitions/uri",
			"title": "Payment failure redirection URI",
			"maxLength": 512
		}
	},
	"required": [
		"id",
		"instrument",
		"model"
	]
}
