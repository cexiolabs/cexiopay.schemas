{
	"$schema": "http://json-schema.org/draft-07/schema#",
	"$id": "https://schemas.pay-cex.io/api/v3/account/account.json",
	"title": "Account data transfer object",
	"description": "Account (finance) is a financial account maintained by CEX.IO Pay. This is very similar to traditional bank account.",
	"allOf": [
		{
			"type": "object",
			"properties": {
				"accountId": {
					"$ref": "https://schemas.pay-cex.io/api/v3/account/identifier-account.json",
					"title": "Account unique identifier."
				},
				"clientAccountId": {
					"type": [
						"string",
						"null"
					],
					"maxLength": 128,
					"title": "Client-side account identifier (null if account was created by processing itself).",
					"description": "It may used to prevent duplicate accounts."
				},
				"clientAccountTag": {
					"type": [
						"string",
						"null"
					],
					"title": "Client's data to store along with account.",
					"maxLength": 4096
				},
				"currency": {
					"$ref": "https://schemas.pay-cex.io/api/v3/currency.json#/definitions/currency",
					"title": "Currency code of the account (like 'BTC', 'USD', etc)."
				},
				"balance": {
					"$ref": "https://schemas.pay-cex.io/api/v3/primitives.json#definitions/financialPositive",
					"title": "Account available balance."
				},
				"createdAt": {
					"ref": "https://schemas.pay-cex.io/api/v3/primitives.json#/definitions/date",
					"title": "Account creation date"
				},
				"triggers": {
					"type": "array",
					"title": "Set of triggers",
					"items": {
						"$ref": "https://schemas.pay-cex.io/api/v3/account/account-trigger.json"
					}
				}
			},
			"required": [
				"accountId",
				"clientAccountId",
				"clientAccountTag",
				"currency",
				"balance",
				"createdAt"
			]
		},
		{
			"oneOf": [
				{
					"type": "object",
					"properties": {
						"currency": {
							"$ref": "https://schemas.pay-cex.io/api/v3/currency.json#/definitions/currencyFiat",
							"title": "Crypto currency code of the account (like 'EUR', 'USD', etc)."
						}
					},
					"required": [
						"currency"
					]
				},
				{
					"type": "object",
					"properties": {
						"currency": {
							"$ref": "https://schemas.pay-cex.io/api/v3/currency.json#/definitions/currencyCrypto",
							"title": "Crypto currency code of the account (like 'BTC', 'ETH', etc)."
						},
						"network": {
							"type": "string",
							"minLength": 1,
							"maxLength": 64,
							"title": "Name of blockchain/network."
						},
						"address": {
							"type": "string",
							"minLength": 1,
							"maxLength": 256,
							"title": "Crypto address related to the account."
						},
						"addressExplorerUrl": {
							"$ref": "https://schemas.pay-cex.io/api/v3/primitives.json#definitions/uri"
						}
					},
					"required": [
						"currency",
						"network",
						"address",
						"addressExplorerUrl"
					]
				}
			]
		}
	]
}
