{
	"$schema": "http://json-schema.org/draft-07/schema#",
	"$id": "https://schemas.cexpay.io/api/v3/currency.json",
	"title": "Declare currency codes",
	"definitions": {
		"currencyCrypto": {
			"type": "string",
			"enum": [
				"ADA",
				"ATOM",
				"BAT",
				"BTC",
				"BTT",
				"DASH",
				"ETH",
				"GAS",
				"LTC",
				"MHC",
				"NEO",
				"ONG",
				"ONT",
				"TRX",
				"TST",
				"USDT",
				"XRP",
				"XTZ"
			]
		},
		"currencyFiat": {
			"type": "string",
			"enum": [
				"EUR",
				"GBP",
				"RUB",
				"USD"
			]
		},
		"currency": {
			"oneOf": [
				{
					"$ref": "#definitions/currencyCrypto"
				},
				{
					"$ref": "#definitions/currencyFiat"
				}
			]
		}
	}
}
