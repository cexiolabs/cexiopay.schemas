{
	"$schema": "http://json-schema.org/draft-07/schema#",
	"$id": "https://schemas.pay-cex.io/api/v3/currency.json",
	"title": "Declare currency codes",
	"definitions": {
		"currencyCrypto": {
			"type": "string",
			"pattern": "^[A-Z]+$"
		},
		"currencyFiat": {
			"type": "string",
			"pattern": "^[A-Z]+$"
		},
		"currency": {
			"oneOf": [
				{
					"$ref": "#definitions/currencyCrypto"
				},
				{
					"$ref": "#definitions/currencyFiat"
				}
			]
		}
	}
}
