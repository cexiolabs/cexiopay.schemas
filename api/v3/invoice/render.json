{
	"$schema": "http://json-schema.org/draft-07/schema#",
	"$id": "https://schemas.pay-cex.io/api/v3/invoice/render.json",
	"title": "Base Invoice Render Context",
	"type": "object",
	"properties": {
		"uuid": {
			"type": "https://schemas.pay-cex.io/api/v3/primitives.json#definitions/uuid"
		},
		"context": {
			"$ref": "https://schemas.pay-cex.io/api/v3/invoice/context.json"
		},
		"processing": {
			"type": "object",
			"properties": {
				"paymentLink": {
					"type": "string",
					"maxLength": 512
				},
				"history": {
					"type": "array",
					"items": {
						"type": "object",
						"properties": {
							"at": {
								"type": "string",
								"maxLength": 128
							},
							"title": {
								"type": "string",
								"maxLength": 128
							}
						},
						"required": [
							"at",
							"title"
						]
					}
				}
			},
			"required": [
				"paymentLink",
				"history"
			]
		}
	},
	"required": [
		"id",
		"uuid",
		"context",
		"processing"
	]
}
