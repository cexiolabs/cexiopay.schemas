{
	// See https://go.microsoft.com/fwlink/?LinkId=733558
	// for the documentation about the tasks.json format
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Build Postgres Database",
			"group": "build",
			"type": "shell",
			"command": "docker run --interactive --tty --rm --volume \"${workspaceFolder}\":/data --env DEVEL=true --env \"database.name\" --env \"database.user.owner\" --env \"database.user.api\" --env \"database.user.dashboard\" --env \"database.user.gate\" --env \"database.user.identity\" --env \"database.user.readonly\" --env \"database.user.sysadmintool\" zxteamorg/devel.migration-builder:20210201",
			"options": {
				"env": {
					"database.name": "devdb",
					"database.user.owner": "cryptopay-devel-owner",
					"database.user.api": "cryptopay-devel-api",
					"database.user.dashboard": "cryptopay-devel-dashboard",
					"database.user.gate": "cryptopay-devel-gate",
					"database.user.identity": "cryptopay-devel-identity",
					"database.user.readonly": "cryptopay-devel-readonly",
					"database.user.sysadmintool": "cryptopay-devel-sysadmintool"
				}
			},
			"problemMatcher": []
		},
		{
			"label": "Database Postgres Install",
			"group": "none",
			"dependsOn": [
				"Build Postgres Database"
			],
			"type": "shell",
			"command": "docker run --network=\"cryptopay-devel-tier\" --rm --interactive --tty --env POSTGRES_URL=postgres://postgres@postgres:5432/devdb --env TARGET_VERSION=v02.00 --volume \"${workspaceFolder}/.dist:/var/local/cexiolabs/migration\" --volume \"${workspaceFolder}/log4js.json:/etc/cexiolabs/migration/log4js.json\" cexiolabs/migration-postgres:latest install --no-sleep && docker run --network=\"cryptopay-devel-tier\" --rm --interactive --tty --env POSTGRES_URL=postgres://cryptopay-devel-owner@postgres:5432/devdb --env TARGET_VERSION=v99.99-next-devel --volume \"${workspaceFolder}/.dist:/var/local/cexiolabs/migration\" --volume \"${workspaceFolder}/log4js.json:/etc/cexiolabs/migration/log4js.json\" cexiolabs/migration-postgres:latest install --no-sleep",
			"problemMatcher": []
		},
		{
			"label": "Database Postgres Rollback",
			"group": "none",
			"type": "shell",
			"command": "docker run --network=\"cryptopay-devel-tier\" --rm --interactive --tty --env \"POSTGRES_URL=postgres://cryptopay-devel-owner@postgres:5432/devdb\" --env \"TARGET_VERSION=v02.00\" --volume \"${workspaceFolder}/.dist:/var/local/cexiolabs/migration\" --volume \"${workspaceFolder}/log4js.json:/etc/cexiolabs/migration/log4js.json\" cexiolabs/migration-postgres:latest rollback --no-sleep && docker run --network=\"cryptopay-devel-tier\" --rm --interactive --tty --env \"POSTGRES_URL=postgres://postgres@postgres:5432/devdb\" --volume \"${workspaceFolder}/.dist:/var/local/cexiolabs/migration\" --volume \"${workspaceFolder}/log4js.json:/etc/cexiolabs/migration/log4js.json\" cexiolabs/migration-postgres:latest rollback --no-sleep",
			"problemMatcher": []
		}
	]
}
