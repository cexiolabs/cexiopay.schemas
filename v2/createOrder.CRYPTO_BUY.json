{
	"$schema": "http://json-schema.org/draft-07/schema#",
	"$id": "https://cexiolabs.github.io/cryptopay.schemas/v2/createOrder.CRYPTO_BUY.json",
	"title": "Create order by instrument CRYPTO_BUY",
	"allOf": [
		{
			"$ref": "https://cexiolabs.github.io/cryptopay.schemas/v2/createOrder.definitions.json#/definitions/createOrderBuySell"
		},
		{
			"type": "object",
			"properties": {
				"instrument": {
					"const": "CRYPTO_BUY"
				},
				"address": {
					"title": "Mandatory. Destination crypto address",
					"type": "string",
					"maxLength": 256
				},
				"autoStart": {
					"title": "Mandatory. If true, invoice will start immediately, otherwise will suspend in status NEW and will waiting for start processing request.",
					"type": "boolean"
				}
			},
			"required": [
				"address",
				"autoStart"
			]
		}
	]
}
