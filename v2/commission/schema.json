{
	"$schema": "http://json-schema.org/draft-07/schema#",
	"$id": "https://schemas.cryptopay.band/v2/commission/schema.json",
	"description": "A commission defines a rule to make fee.",
	"definitions": {
		"fixedOrFactor": {
			"type": "object",
			"oneOf": [
				{
					"title": "Fixed value",
					"properties": {
						"type": {
							"const": "FIXED"
						},
						"value": {
							"$ref": "#/definitions/financialPositive"
						}
					},
					"required": [
						"currency",
						"type",
						"value"
					]
				},
				{
					"title": "Percent value",
					"properties": {
						"type": {
							"const": "FACTOR"
						},
						"value": {
							"$ref": "#/definitions/factorPositive"
						}
					},
					"required": [
						"currency",
						"type",
						"value"
					]
				}
			]
		},
		"financialPositive": {
			"type": "string",
			"title": "Positive financial value",
			"pattern": "^(0|[1-9][0-9]*)(\\.([0-9]+))?$"
		},
		"factorPositive": {
			"type": "string",
			"title": "Positive percent value (0.01 - mean 1%)",
			"pattern": "^(0|[1-9][0-9]*)(\\.([0-9]+))?$"
		}
	},
	"oneOf": [
		{
			"allOf": [
				{
					"$ref": "#/definitions/fixedOrFactor"
				},
				{
					"properties": {
						"kind": {
							"const": "COMMISSION_ORDER_PROCESSING",
							"description": "Order processing commission."
						},
						"settleCurrency": {
							"type": "string"
						}
					},
					"required": [
						"kind",
						"settleCurrency"
					]
				}
			]
		},
		{
			"allOf": [
				{
					"$ref": "#/definitions/fixedOrFactor"
				},
				{
					"properties": {
						"kind": {
							"const": "COMMISSION_ORDER_EXCHANGE",
							"description": "Order exchange commission."
						},
						"settleCurrency": {
							"type": "string"
						}
					},
					"required": [
						"kind",
						"settleCurrency"
					]
				}
			]
		}
	]
}
